<form method="post" action="{{ path('app_product_image_delete', {'id': image.id}) }}" onsubmit="return confirm('Are you sure you want to delete this image?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ image.id) }}">
    <button id="deleteButton" class="btn btn-danger"><span class="fa fa-times"></span> Delete</button>
</form>
