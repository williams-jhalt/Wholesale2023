{% extends 'base.html.twig' %}

{% block title %}Weborder{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-2">
            <a class="btn btn-light" href="{{ path('app_weborder_index') }}"><span class="fa fa-arrow-left"></span> Back</a>
        </div>
        <div class="col">
            <h1>Viewing Weborder</h1>
        </div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>OrderNumber</th>
                <td>{{ weborder.orderNumber }}</td>
            </tr>
            <tr>
                <th>Customer</th>
                <td>{{ weborder.customer.customerNumber }} - {{ weborder.customer.company }}</td>
            </tr>
            <tr>
                <th>Reference1</th>
                <td>{{ weborder.reference1 }}</td>
            </tr>
            <tr>
                <th>Reference2</th>
                <td>{{ weborder.reference2 }}</td>
            </tr>
            <tr>
                <th>Reference3</th>
                <td>{{ weborder.reference3 }}</td>
            </tr>
            <tr>
                <th>ShipToName</th>
                <td>{{ weborder.shipToName }}</td>
            </tr>
            <tr>
                <th>ShipToAddress</th>
                <td>{{ weborder.shipToAddress }}</td>
            </tr>
            <tr>
                <th>ShipToAddress2</th>
                <td>{{ weborder.shipToAddress2 }}</td>
            </tr>
            <tr>
                <th>ShipToAddress3</th>
                <td>{{ weborder.shipToAddress3 }}</td>
            </tr>
            <tr>
                <th>ShipToCity</th>
                <td>{{ weborder.shipToCity }}</td>
            </tr>
            <tr>
                <th>ShipToState</th>
                <td>{{ weborder.shipToState }}</td>
            </tr>
            <tr>
                <th>ShipToZip</th>
                <td>{{ weborder.shipToZip }}</td>
            </tr>
            <tr>
                <th>ShipToCountry</th>
                <td>{{ weborder.shipToCountry }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_weborder_edit', {'id': weborder.id}) }}"><span class="fa fa-edit"></span> Edit</a>

{% endblock %}
