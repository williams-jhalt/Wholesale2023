{% extends 'base.html.twig' %}

{% block title %}ProductType index{% endblock %}

{% block body %}
    <h1>ProductType index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Code</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_type in product_types %}
            <tr>
                <td>{{ product_type.id }}</td>
                <td>{{ product_type.code }}</td>
                <td>{{ product_type.name }}</td>
                <td>
                    <a href="{{ path('app_product_type_show', {'id': product_type.id}) }}">show</a>
                    <a href="{{ path('app_product_type_edit', {'id': product_type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_type_new') }}">Create new</a>
{% endblock %}
